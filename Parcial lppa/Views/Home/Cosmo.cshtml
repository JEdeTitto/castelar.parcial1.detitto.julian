@{
	ViewBag.Title = "Cosmo";
}
<h2>Gestión de Constelaciones</h2>
<hr />
<div>
	<form autocomplete="off">
		<fieldset>
			
				<label for="siglo">Siglo</label>
				<div>
					<input type="text" class="form-control" id="siglo" value="" placeholder="Ingrese siglo">
				</div>
		
				<label for="nombre">Nombre</label>
				<div>
					<input type="text" class="form-control" id="nombre" value="" placeholder="Ingrese nombre">
				</div>
			
			<button type="button" id="btnSave" class="btn button-success color-success" onclick="guardar();">Grabar</button>
			<button type="button" id="btnList" class="btn button-default color-default" onclick="listar();">Listar constelaciones</button>
		</fieldset>
	</form>
</div>
<hr />
<div id="listaConstelaciones">
</div>
@section scripts{
	<script>
		var constelaciones = new Array();


		function Constelacion() {
			this.setSiglo = function (value) {
				this._siglo = value;
			}
			this.getSiglo = function () {
				return this._siglo;
			}
			this.setNombre = function (value) {
				this._nombre = value;
			}
			this.getNombre = function () {
				return this._nombre;
			}
		}

		function guardar() {
			var constelacion = new Constelacion();
			var siglo = document.getElementById("siglo").value;
			var nombre = document.getElementById("nombre").value;
			if (siglo == "" || nombre == "") {
				alert("Debe ingresar los datos");
				return;
			}
			constelacion.setSiglo(siglo);
			constelacion.setNombre(nombre);

			constelaciones.push(constelacion);

			document.getElementById("siglo").value = "";
			document.getElementById("nombre").value = "";
		}




		function listar() {
			var res = document.getElementById("listaConstelaciones");
			res.innerHTML = "";
			if (constelaciones.length == 0) {
				res.innerHTML = "No hay datos.";
				return;
			}


			for (let i = 0; i < constelaciones.length; i++) {
				let constelacion = constelaciones[i];
				res.innerHTML += "Siglo de constelacion: " + constelacion.getSiglo() + " - Nombre de constalcion: " + constelacion.getNombre() + "<br />";
			}
		}
	</script>

}